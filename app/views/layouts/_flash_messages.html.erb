<% if notice || alert %>
  <div class="flash-container">
    <% if notice %>
      <div class="flash-toast flash-notice">
        <span><%= notice %></span>
      </div>
    <% end %>
    <% if alert %>
      <div class="flash-toast flash-alert">
        <span><%= alert %></span>
      </div>
    <% end %>
  </div>
<% end %>
